---
import techs from '../data/technologies.json'
---


<section id="tecnologias" class="bg-white text-zinc-900 pb-40 mt-20">
    <div class="p-20 m-auto">
        <h2 class="text-3xl font-semibold text-center">Tecnologias</h2>
    </div>
    <div id="techcontainer">
    {
        techs.map((tech)=>(
            <div class="flex gap-8 md:gap-20 m-auto px-8 md:px-20 py-8 justify-center max-w-full items-center mb-14 flex-col md:flex-row text-center md:text-left">
                <img loading="lazy" class="w-full md:w-96" src={tech.img} alt={tech.alt} />
                <div class="flex flex-col gap-4">
                    <h3 class="text-2xl font-medium ">{tech.title}</h3>
                    <p class="text-left">{tech.body}</p>
                </div>
            </div>
            <div class="flex gap-8 md:gap-20 m-auto px-8 md:px-20 py-8 justify-center max-w-full items-center mb-14 flex-col md:flex-row-reverse text-center md:text-left">
                <img loading="lazy" class="w-full md:w-96" src={tech.img2} alt={tech.alt2} width="384" />
                <div class="flex flex-col gap-4">
                    <h3 class="text-2xl font-medium ">{tech.title2}</h3>
                    <p class="text-left">{tech.body2}</p>
                </div>
            </div>
        ))
    }
    </div>
</section>

<style>
    p{
        max-width: 50ch;
    }
    

</style>
